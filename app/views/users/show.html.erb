<% if has_flash? %>
  <div class="<%= flash_class %>">
    <p><%= flash_notice %></p>
  </div>
<% end %>

<p>
  <strong>Realname:</strong>
  <%= @user.realname %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Customer token:</strong>
  <%= @user.customer_token %>
</p>

<p>
  <strong>Twitter:</strong>
  <%= @user.twitter_id %>
</p>

<p>
  <strong>Facebook:</strong>
  <%= @user.facebook_id %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @user.admin %>
</p>

<div class="btn-group">
  <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning' %>
  <%= link_to 'Destroy', @user, method: :delete, class: 'btn btn-danger' %>
</div>
