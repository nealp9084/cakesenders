<div class="table-responsive">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Order History</h1>
    </div>

    <div class="panel-body">
      <p>This page contains a history of all the orders you ever made. Just in case you want to order again.</p>
      <% if admin? %>
        <p class="text-muted">Since you are an admin, all orders will be displayed.</p>
      <% end %>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <% if admin? %>
            <th>User</th>
          <% end %>
          <th>Goodie</th>
          <th>Destination Address</th>
          <th>Charge Token</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <% if admin? %>
              <td><%= link_to order.user.username, order.user %></td>
            <% end %>
            <td><%= link_to order.goodie.name, order.goodie %></td>
            <td><%= order.destination %></td>
            <td><%= order.charge_token %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'Show', order, class: 'btn btn-primary' %>
                <% if admin? %>
                  <%= link_to 'Edit', edit_order_path(order), class: 'btn btn-warning' %>
                  <%= link_to 'Destroy', order, method: :delete, class: 'btn btn-danger' %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
