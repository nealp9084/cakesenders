<div class="thumbnail">
  <%= image_tag goodie_image(goodie), class: 'img-responsive' %>

  <div class="caption">
    <h3><%= goodie.name %></h3>
    <p><%= goodie.description %></p>
    <div class="row">
      <div class="col-md-3 col-sm-3">
        <p class="text-left text-muted"><%= goodie_price(goodie) %></p>
      </div>
      <div class="col-md-9 col-sm-9">
        <div class="btn-group pull-right">
          <%= link_to 'Details', goodie, class: 'btn btn-xs btn-primary' %>
          <% if admin? %>
            <%= link_to 'Edit', edit_goodie_path(goodie), class: 'btn btn-xs btn-warning' %>
            <%= link_to 'Destroy', goodie, method: :delete, class: 'btn btn-xs btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
