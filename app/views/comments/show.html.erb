<% if has_flash? %>
  <div class="<%= flash_class %>">
    <p><%= flash_notice %></p>
  </div>
<% end %>

<blockquote>
  <article><%= md @comment.content %></article>
  <small>
    <cite><%= @comment.user.username %></cite> commenting on <%= link_to @comment.goodie.name, @comment.goodie %> at <%= localize @comment.created_at %>
  </small>
</blockquote>

<hr>

<div class="btn-group">
  <%= link_to 'Back', comments_path, class: 'btn btn-default', role: 'button' %>
  <% if @comment.user == current_user || admin? %>
    <%= link_to 'Edit', edit_goodie_comment_path(@comment.goodie, @comment), class: 'btn btn-warning', role: 'button' %>
    <%= link_to 'Destroy', [@comment.goodie, @comment], method: :delete, class: 'btn btn-danger', role: 'button' %>
  <% end %>
</div>
