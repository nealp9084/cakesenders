<% if has_flash? %>
  <div class="<%= flash_class %>">
    <p><%= flash_notice %></p>
  </div>
<% end %>

<blockquote>
  <p><%= @comment.content %></p>
  <small>
    <cite><%= @comment.user.username %></cite> commenting on <%= link_to @comment.goodie.name, @comment.goodie %>
  </small>
</blockquote>

<hr>

<div class="btn-group">
  <% if @comment.user == current_user || admin? %>
    <%= link_to 'Edit', edit_comment_path(@comment), class: 'btn btn-warning' %>
  <% end %>
  <%= link_to 'Back', comments_path, class: 'btn btn-default' %>
</div>
